<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PROIECT.LocatarPage"
             Title="Locatari Apartament">
    <Grid RowDefinitions="*, Auto" Margin="20">
        <ListView x:Name="listView" Grid.Row="0">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding Nume}" Detail="{Binding Email}">
                        <TextCell.ContextActions>
                            <MenuItem Text="Șterge" 
                              IsDestructive="True" 
                              Clicked="OnDeleteLocatarClicked" 
                              CommandParameter="{Binding .}" />
                        </TextCell.ContextActions>
                    </TextCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Button Text="Adaugă Locatar" Grid.Row="1" Clicked="OnLocatarAddedClicked" />
    </Grid>
</ContentPage>