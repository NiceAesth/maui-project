<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ApartmentManager.Maui.SesizareEntryPage"
             Title="Raportează o Problemă">

    <VerticalStackLayout Padding="20" Spacing="15">

        <Label Text="Subiect:" FontAttributes="Bold" />
        <Entry x:Name="subiectEntry"
               Placeholder="Ex: Bec ars pe scară, Gălăgie..."
               TextColor="Black" />

        <Label Text="Descriere:" FontAttributes="Bold" />
        <Editor x:Name="descriereEditor"
                Placeholder="Scrie aici detaliile problemei..."
                HeightRequest="150"
                BackgroundColor="#f0f0f0"
                TextColor="Black" />

        <Button Text="Trimite Sesizarea"
                Clicked="OnSendClicked"
                BackgroundColor="{StaticResource Primary}"
                TextColor="White"
                CornerRadius="10"
                Margin="0,20,0,0" />

    </VerticalStackLayout>
</ContentPage>