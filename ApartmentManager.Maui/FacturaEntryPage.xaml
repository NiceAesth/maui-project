<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ApartmentManager.Maui.FacturaEntryPage"
             Title="Adaugă Factură">

    <VerticalStackLayout Spacing="20" Padding="30">

        <Label Text="Selectează Apartamentul:" FontAttributes="Bold" />
        <Picker x:Name="apartamentPicker"
                Title="Alege Apartament"
                TextColor="Black"
                TitleColor="Gray" />
        <Label Text="Tip Factură:" FontAttributes="Bold" />
        <Picker x:Name="tipPicker"
                Title="Alege Tipul (Gaz, Curent...)"
                TextColor="Black"
                TitleColor="Gray">
            <Picker.ItemsSource>
                <x:Array Type="{x:Type x:String}">
                    <x:String>Gaz</x:String>
                    <x:String>Curent</x:String>
                    <x:String>Apă</x:String>
                    <x:String>Întreținere</x:String>
                    <x:String>Internet</x:String>
                    <x:String>Salubritate</x:String>
                    <x:String>Altele</x:String>
                </x:Array>
            </Picker.ItemsSource>
        </Picker>

        <Label Text="Sumă de plată (RON):" FontAttributes="Bold" />
        <Entry x:Name="sumaEntry"
               Placeholder="0.00"
               Keyboard="Numeric"
               TextColor="Black" />

        <Label Text="Data Facturii:" FontAttributes="Bold" />
        <DatePicker x:Name="datePicker"
                    Format="dd/MM/yyyy"
                    TextColor="Black" />

        <Button Text="Salvează Factura"
                Clicked="OnSaveClicked"
                BackgroundColor="{StaticResource Primary}"
                TextColor="White"
                CornerRadius="10" />

        <Button Text="Anulează"
                Clicked="OnCancelClicked"
                BackgroundColor="Gray"
                TextColor="White"
                CornerRadius="10" />

    </VerticalStackLayout>
</ContentPage>