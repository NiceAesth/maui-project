<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ApartmentManager.Maui.ApartamentPage"
             Title="Gestionare Apartamente">

    <Grid RowDefinitions="*, Auto" Margin="20">
        <CollectionView x:Name="listView"
                        Grid.Row="0"
                        SelectionMode="Single"
                        SelectionChanged="OnCollectionViewSelectionChanged">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid Padding="10">
                        <VerticalStackLayout>
                            <Label Text="{Binding NumarApartament}" FontAttributes="Bold" FontSize="16" />
                            <Label Text="{Binding DetaliiApartament}" FontSize="12" TextColor="Gray" />
                        </VerticalStackLayout>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Button x:Name="addApartamentBtn"
                Text="AdaugÄƒ Apartament Nou"
                Grid.Row="1"
                Clicked="OnApartamentAddedClicked"
                BackgroundColor="Blue"
                TextColor="White" />
    </Grid>
</ContentPage>