<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PROIECT.ApartamentEntryPage"
             Title="Detalii Apartament">

    <ScrollView>
        <VerticalStackLayout Spacing="15" Padding="20">

            <Label Text="Număr Apartament:" FontAttributes="Bold"/>
            <Entry Placeholder="Ex: 12A" Text="{Binding NumarApartament}" />

            <Label Text="Etaj:" FontAttributes="Bold"/>
            <Entry Placeholder="Ex: 2" Text="{Binding Etaj}" Keyboard="Numeric" />

            <Label Text="Suprafață (mp):" FontAttributes="Bold"/>
            <Entry Placeholder="Ex: 55" Text="{Binding Suprafata}" Keyboard="Numeric" />

            <Button x:Name="saveBtn" 
                    Text="Salvează Apartament" 
                    Clicked="OnSaveButtonClicked" 
                    BackgroundColor="{StaticResource Primary}" 
                    TextColor="White"/>

            <Button x:Name="deleteBtn" 
                    Text="Șterge" 
                    Clicked="OnDeleteButtonClicked" 
                    BackgroundColor="Red" 
                    TextColor="White"/>

            <Button Text="Vezi Locatari Apartament" 
                    Clicked="OnViewLocatariClicked" 
                    BackgroundColor="Green" 
                    TextColor="White"
                    Margin="0,20,0,0"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>