<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PROIECT.LoginPage"
             Title="Autentificare"
             BackgroundColor="White">

    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="30" VerticalOptions="Center">

            <Image Source="dotnet_bot.svg" HeightRequest="100" Margin="0,0,0,20"/>

            <Label Text="Bine ați venit!" 
                   FontSize="24" FontAttributes="Bold" 
                   TextColor="Black"
                   HorizontalOptions="Center" />

            <Label Text="Introduceți adresa de email pentru a vă accesa contul:" 
                   TextColor="Gray"
                   HorizontalOptions="Center" HorizontalTextAlignment="Center"/>

            <Entry x:Name="emailEntry" 
                   Placeholder="Email" 
                   TextColor="Black"
                   PlaceholderColor="Gray"
                   Keyboard="Email" />

            <Entry x:Name="passwordEntry" 
                   Placeholder="Parolă" 
                   IsPassword="True"
                   TextColor="Black" 
                   PlaceholderColor="Gray" />

            <Button Text="Intră în aplicație" 
                    Clicked="OnLoginClicked" 
                    BackgroundColor="{StaticResource Primary}" 
                    TextColor="White"
                    CornerRadius="10"
                    HeightRequest="50"/>

            <Label x:Name="errorLabel" TextColor="Red" HorizontalOptions="Center" />

            <Button Text="Nu ai cont? Înregistrează-te" 
                    Clicked="OnRegisterLabelClicked" 
                    BackgroundColor="Transparent" 
                    TextColor="{StaticResource Primary}" 
                    Margin="0,10,0,0"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>