<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PROIECT.LocatarEntryPage"
             Title="Adaugă Locatar">

    <VerticalStackLayout Spacing="20" Padding="30">

        <Label Text="Alege Apartamentul:" FontAttributes="Bold"/>
        <Picker x:Name="apartamentPicker" 
                Title="Selectează apartament"
                TitleColor="Gray"
                TextColor="Black"/>

        <Label Text="Nume Locatar:" FontAttributes="Bold"/>
        <Entry x:Name="numeEntry" Placeholder="Ex: Popescu Ion" TextColor="Black"/>

        <Label Text="Email (Opțional):" FontAttributes="Bold"/>
        <Entry x:Name="emailEntry" Placeholder="Ex: email@yahoo.com" Keyboard="Email" TextColor="Black"/>

        <Button Text="Salvează"
                Clicked="OnSaveClicked"
                BackgroundColor="{StaticResource Primary}"
                TextColor="White"/>
    </VerticalStackLayout>
</ContentPage>