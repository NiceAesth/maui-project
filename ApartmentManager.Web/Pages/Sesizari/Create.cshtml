@page
@model CreateModel
@{
    ViewData["Title"] = "Trimite Sesizare";
}

<h1>Trimite Sesizare</h1>

<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-3">
                <label asp-for="Sesizare.Subiect" class="control-label"></label>
                <input asp-for="Sesizare.Subiect" class="form-control" placeholder="Ex: Bec ars, Zgomot..."/>
                <span asp-validation-for="Sesizare.Subiect" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Sesizare.Descriere" class="control-label"></label>
                <textarea asp-for="Sesizare.Descriere" class="form-control" rows="5"
                          placeholder="Descrieți problema..."></textarea>
                <span asp-validation-for="Sesizare.Descriere" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Trimite" class="btn btn-primary"/>
                <a asp-page="/Index" class="btn btn-secondary">Anulează</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
