@page
@model EditModel
@{
    ViewData["Title"] = "Editează Factură";
}

<h1>Editează Factură</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Factura.ID"/>
            <div class="form-group mb-3">
                <label asp-for="Factura.IdApartament" class="control-label">Apartament</label>
                <select asp-for="Factura.IdApartament" class="form-control" asp-items="Model.ApartamentList"></select>
                <span asp-validation-for="Factura.IdApartament" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Factura.Luna" class="control-label"></label>
                <input asp-for="Factura.Luna" class="form-control"/>
                <span asp-validation-for="Factura.Luna" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Factura.SumaDePlata" class="control-label"></label>
                <input asp-for="Factura.SumaDePlata" class="form-control"/>
                <span asp-validation-for="Factura.SumaDePlata" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Factura.Tip" class="control-label">Tip</label>
                <input asp-for="Factura.Tip" class="form-control"/>
                <span asp-validation-for="Factura.Tip" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Factura.Status" class="control-label"></label>
                <select asp-for="Factura.Status" class="form-control">
                    <option value="Neplătit">Neplătit</option>
                    <option value="Plătit">Plătit</option>
                </select>
                <span asp-validation-for="Factura.Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvează" class="btn btn-primary"/>
                <a asp-page="./Index" class="btn btn-secondary">Înapoi la Listă</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
