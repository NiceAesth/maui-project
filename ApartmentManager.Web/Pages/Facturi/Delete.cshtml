@page
@model DeleteModel
@{
    ViewData["Title"] = "Șterge Factură";
}

<h1>Șterge Factură</h1>

<h3>Sunteți sigur că doriți să ștergeți această factură?</h3>
<div>
    <h4>Factura</h4>
    <hr/>
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.Factura.ID</dd>
        <dt class="col-sm-2">Luna</dt>
        <dd class="col-sm-10">@Model.Factura.Luna</dd>
        <dt class="col-sm-2">Suma</dt>
        <dd class="col-sm-10">@Model.Factura.SumaDePlata</dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Factura.ID"/>
        <input type="submit" value="Șterge" class="btn btn-danger"/> |
        <a asp-page="./Index">Înapoi la Listă</a>
    </form>
</div>
