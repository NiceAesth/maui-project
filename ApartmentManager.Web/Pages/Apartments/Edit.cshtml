@page
@model EditModel
@{
    ViewData["Title"] = "Editează Apartament";
}

<h1>Editează Apartament</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Apartament.ID"/>
            <div class="form-group mb-3">
                <label asp-for="Apartament.NumarApartament" class="control-label">Număr Apartament</label>
                <input asp-for="Apartament.NumarApartament" class="form-control"/>
                <span asp-validation-for="Apartament.NumarApartament" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Apartament.Etaj" class="control-label"></label>
                <input asp-for="Apartament.Etaj" class="form-control" type="number"/>
                <span asp-validation-for="Apartament.Etaj" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Apartament.Suprafata" class="control-label">Suprafață (mp)</label>
                <input asp-for="Apartament.Suprafata" class="form-control" type="number" step="0.01"/>
                <span asp-validation-for="Apartament.Suprafata" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Apartament.NumarPersoane" class="control-label">Număr Persoane</label>
                <input asp-for="Apartament.NumarPersoane" class="form-control" type="number"/>
                <span asp-validation-for="Apartament.NumarPersoane" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvează" class="btn btn-primary"/>
                <a asp-page="./Index" class="btn btn-secondary">Înapoi la Listă</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
