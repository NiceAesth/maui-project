@page
@model DeleteModel
@{
    ViewData["Title"] = "Șterge Cheltuială";
}

<h1>Șterge Cheltuială</h1>

<h3>Sunteți sigur că doriți să ștergeți această cheltuială?</h3>
<div>
    <h4>Cheltuială Asociație</h4>
    <hr/>
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.Cheltuiala.ID</dd>
        <dt class="col-sm-2">Tip</dt>
        <dd class="col-sm-10">@Model.Cheltuiala.Tip</dd>
        <dt class="col-sm-2">Suma</dt>
        <dd class="col-sm-10">@Model.Cheltuiala.SumaTotala RON</dd>
        <dt class="col-sm-2">Data</dt>
        <dd class="col-sm-10">@Model.Cheltuiala.DataFactura.ToShortDateString()</dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Cheltuiala.ID"/>
        <input type="submit" value="Șterge" class="btn btn-danger"/> |
        <a asp-page="./Index">Înapoi la Listă</a>
    </form>
</div>
