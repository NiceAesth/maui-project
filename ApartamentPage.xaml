<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PROIECT.ApartamentPage"
             Title="Gestionare Apartamente">

    <Grid RowDefinitions="*, Auto" Margin="20">
        <ListView x:Name="listView" 
                  Grid.Row="0"
                  ItemSelected="OnListViewItemSelected">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding NumarApartament}" 
                              Detail="{Binding DetaliiApartament}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <Button x:Name="addApartamentBtn"
                Text="AdaugÄƒ Apartament Nou"
                Grid.Row="1"
                Clicked="OnApartamentAddedClicked"
                BackgroundColor="Blue"
                TextColor="White" />
    </Grid>
</ContentPage>